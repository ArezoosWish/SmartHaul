        "body": "={{ (() => { const s = $('Generate Daily Statistics').item.json; return ({ type: 'daily_report', statistics: s, message: `Daily Report: ${s.total_shipments} total shipments, ${s.delivered} delivered, ${s.in_transit} in transit`, timestamp: new Date().toISOString() }); })() }}"
      },

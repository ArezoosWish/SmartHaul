    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO delivery_events (shipment_id, event_type, location, notes) VALUES ($1, 'delay_alert', $2, 'Delivery delayed: ETA updated due to traffic/weather')",
        "additionalFields": {
          "queryReplacement": "={{ $json.id }},={{ $json.destination }}"
        }
      },
      "id": "create-delay-event",

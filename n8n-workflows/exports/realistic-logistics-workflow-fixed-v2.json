        "operation": "executeQuery",
        "query": "UPDATE shipments SET eta = eta + INTERVAL '1 hour' WHERE id = $1 RETURNING id, eta",
        "additionalFields": {
          "queryReplacement": "={{ $json.id }}"
        }
      },

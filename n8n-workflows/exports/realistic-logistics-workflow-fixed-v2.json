    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO delivery_events (shipment_id, event_type, location, notes) VALUES (1, 'daily_report', 'System', 'Daily Statistics: Total: ' || $1 || ', Delivered: ' || $2 || ', In Transit: ' || $3 || ', Pending: ' || $4)",
        "additionalFields": {
          "queryReplacement": "={{ $json.total_shipments }},={{ $json.delivered }},={{ $json.in_transit }},={{ $json.pending }}"

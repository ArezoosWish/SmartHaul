        "headerParameters": {
          "parameters": [
            { "name": "Content-Type", "value": "application/json" }
          ]
        },
        "jsonParameters": true,
        "options": { "bodyContentType": "json" },
        "body": "={{ ({ type: 'delay_alert', shipment_id: $('Get Delayed Shipments').item.json.id, message: `Shipment ${$('Get Delayed Shipments').item.json.tracking_number} delayed. New ETA: ${$('Update Delayed ETA').item.json.eta}`, timestamp: new Date().toISOString() }) }}"
      },

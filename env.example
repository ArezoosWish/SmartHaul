# SmartHaul Environment Variables Template
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smarthaul
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/smarthaul_test

# FastAPI Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# N8N Configuration
N8N_BASE_URL=http://localhost:5679
N8N_WEBHOOK_URL=http://localhost:5679/webhook
N8N_API_KEY=your-n8n-api-key
N8N_WORKSPACE_ID=your-workspace-id
N8N_USERNAME=admin
N8N_PASSWORD=smarthaul123

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_N8N_BASE_URL=http://localhost:5678
VITE_APP_NAME=SmartHaul

# External Services (for future use)
# OCR_SERVICE_URL=
# MAPS_API_KEY=
# WEATHER_API_KEY=
# SMS_SERVICE_API_KEY=

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/smarthaul.log

# Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173 